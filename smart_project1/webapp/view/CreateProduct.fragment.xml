<core:FragmentDefinition
xmlns="sap.m"
xmlns:core="sap.ui.core" 
xmlns:form= "sap.ui.layout.form">
<Dialog title="Create Product">
<form:SimpleForm>
<Label text="ID"/>
<Input value="{ProductModel>/ID}"/>
<Label text="Name"/>
<Input value="{ProductModel>/Name}"/>
<Label text="Description"/>
<Input value="{ProductModel>/Description}"/>
<Label text="Price"/>
<Input value="{ProductModel>/Price}"/>
<Label text="Rating"/>
<Input value="{ProductModel>/Rating}"/>
<Label text="DiscontinuedDate"/>
<Input value="{ProductModel>/DiscontinuedDate}"/>
<!--<DatePicker id="DP8" valueFormat="DD.MM.YYYYTHH:MM:SS" displayFormat="long" 
placeholder="Enter Date" value="{ProductModel>/DiscontinuedDate}" width="400px"/>-->
<Label text="ReleaseDate"/>
<Input value="{ProductModel>/ReleaseDate}"/>
</form:SimpleForm>
<buttons>
<Button text="Save" press="_OnProductSave"></Button>
<Button text="Close" press="_OnProdClose"></Button>
</buttons>
</Dialog>
</core:FragmentDefinition>